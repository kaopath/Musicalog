@model Entity.Album
@{
    ViewBag.Title = "Album Detail";
}

<h2>@ViewBag.Title.</h2>

<div class="row">
    @using (Html.BeginForm("AlbumDetail", "Album", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
    <div class="col-md-12">
        @Html.LabelFor(m => m.Name):
        @Html.TextBoxFor(m => m.Name)
    </div>

    <div class="col-md-12">
        @Html.LabelFor(m => m.Artist):
        @Html.TextBoxFor(m => m.Artist)
    </div>

    <div class="col-md-12">
        @Html.LabelFor(m => m.Stock):
        @Html.TextBoxFor(m => m.Stock)
    </div>

    <div class="col-md-12">
        @Html.LabelFor(m => m.Label):
          @Html.TextBoxFor(m => m.Label)
    </div>

    <div class="col-md-12">
        @Html.LabelFor(m => m.Type):
        @Html.EnumDropDownListFor(m => m.Type)
    </div>

        <input type="submit" value="@Html.Raw(Model.Id > 0 ? "Update" : "Add")" class = "btn btn-info" />

        @Html.ActionLink("Cancel", "Album", "Album", null, new { @class = "btn btn-danger" })
    }

</div>
